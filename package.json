{
  "name": "zepto",
  "version": "1.0.2",
  "description": "https://www.zepto-ai.com/",
  "main": "main.js",
  "scripts": {
    "release": "node deploy",
    "transpile": "node transpiler.dev.js",
    "postinstall": "electron-builder install-app-deps",
    "start:mix": "mix && npm run transpile",
    "build:mix": "mix -p && npm run transpile",
    "watch:mix": "mix watch",
    "start:app": "electron .",
    "build:app-mwl": "npm run build:mix && electron-builder -mwl --publish never",
    "build:app-wl": "npm run build:mix && electron-builder -wl --publish never",
    "build:app-w": "npm run build:mix && electron-builder build --win --publish never",
    "deploy:app": "npm run build:mix && electron-builder -mwl --publish always",
    "start": "npm run start:mix && npm run start:app",
    "watch": "concurrently \"npm run watch:mix\" \"npm run start:app\"",
    "build": "npm run build:mix && npm run build:app-mwl",
    "build:w": "npm run build:mix && npm run build:app-w",
    "deploy": "npm run build:mix && npm run deploy:app",
    "deploy:w": "npm run build:mix && electron-builder build --win && npm run release"
  },
  "build": {
    "appId": "com.zepto-ai.zepto",
    "files": [
      "index.html",
      "**.jsc",
      "!**.js",
      "main.js",
      "app.jsc",
      "node_modules/**/*",
      "package.json",
      "bundle",
      "!bundle/js/index.js"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://gitlab.com"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "identity": "Mac Developer: Zepto-AI",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "author": "Zepto-Ai",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "11.3.0",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^3.2.3",
    "laravel-mix": "*",
    "node-gyp-build": "^4.2.2",
    "os-browserify": "^0.3.0",
    "postcss": "8.3.1",
    "prop-types": "^15.7.2",
    "raw-loader": "^4.0.2",
    "sass": "^1.39.0",
    "sass-loader": "^12.1.0",
    "simple-git": "^2.45.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@gitbeaker/node": "^34.1.0",
    "active-win": "",
    "axios": "^0.21.4",
    "bulma": "^0.9.3",
    "bytenode": "^1.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-packaged": "^1.0.2",
    "electron-reload": "",
    "electron-updater": "^4.3.9",
    "iconv": "^3.0.0",
    "js-base64": "^3.7.0",
    "js-cookie": "^3.0.1",
    "js-file-download": "^0.4.12",
    "mixpanel-browser": "^2.41.0",
    "net": "^1.0.2",
    "node-downloader-helper": "^1.0.18",
    "node-loader": "^2.0.0",
    "node-notifier": "^10.0.0",
    "node-osascript": "^2.1.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.3",
    "react-router-dom": "^5.3.0",
    "worker-timers": "^7.0.39"
  }
}
